//<![CDATA[
var imgcount = 0;
var total_img_count = 0;
var notify_loaded;
var sort_grid;
jQuery.noConflict();
var j$ = jQuery;
j$(function(){
    // for padding-left
    j$('article p[style]').each(function() {
	var $this = j$(this);
	var padding_str = $this.css("padding-left");
	if (padding_str.length > 0) {
	  var padding = parseInt(padding_str.replace("px", ""), 10);
	  var width = $this.width();
	  $this.width(width - padding);
	}
      });

    // for read more...
    j$("p a.more-link").parent().each(function() {
	var text = j$(this).text().replace(/ 続きを読む»/, "");
      if (text.length > 0) {
	more_link = j$(this).children("a.more-link");
	j$(this).after(document.createElement("p"));
	j$(this).next("p").append(more_link);
	j$(this).remove("a.more-link");
      }
      });

    var imgs = j$("#article-list * img");
    total_img_count = j$(imgs).length;
    notify_loaded = function() {
      imgcount += 1;
      if (total_img_count == imgcount) {
	sort_grid();
      }
    };

    sort_grid = function() {
      j$('#article-list').vgrid(
			      {
        easeing: "easeOutQuint",
        useLoadImageEvent: true,
        time: 200,
        delay: 50,
        fadeIn: {
            time: 300,
            delay: 60
        }
      });
    };

    if (total_img_count) {
      j$(imgs).each(function (){
	  if (this.complete || this.readyState == "complete") {
	    // for cached images
	    notify_loaded();
	  } else {
	    this.onload = function() {
	      notify_loaded();
	    };
	    this.onerror = function() {
	      notify_loaded();
	    };
	  }
	});
    } else {
      sort_grid();
    }

});
//]]>
</script>
